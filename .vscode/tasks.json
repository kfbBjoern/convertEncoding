{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Config",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/Build"
            },
            "command": "cmake ../Source",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/Build"
            },
            "command": "cmake -DCMAKE_BUILD_TYPE:STRING=Debug  --clean-first --build .",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Make",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/Build"
            },
            "command": "make -j 4",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}